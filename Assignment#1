#5.3
#passing version

alien_color = 'green'

if alien_color == 'green':
    print("You just earned 5 points!")

#failing version

alien_color = 'red'

if alien_color == 'green':
    print("You just earned 5 points!")

#5.4

#if block

alien_color = 'green'

if alien_color == 'green':
    print("You just earned 5 points!")
else:
    print("You just earned 10 points!")

#else block

alien_color = 'yellow'

if alien_color == 'green':
    print("You just earned 5 points!")
else:
    print("You just earned 10 points!")
